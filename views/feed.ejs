<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Pulse Post</title>
		<link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
			crossorigin="anonymous"
		/>
		<link href="/styles/global.css" rel="stylesheet" />
		<link href="/styles/lists.css" rel="stylesheet" />
		<link href="/styles/feed.css" rel="stylesheet" />
		<link href="/styles/backgrounds.css" rel="stylesheet" />
	</head>

	<body class="bg-light">
		<%- include('partials/navbars/navbar-feed.ejs') %>

		<div class="container-fluid">
			<div class="row d-flex justify-content-center">
				<!-- Left sidebar -->
				<div
					class="col-2 col-xxl-3 bg-light ps-4 pt-3 border-end d-flex justify-content-end fixed-sidebar-left"
				>
					<div class="col-12 col-xxl-8">
						<h2
							class="sticky-top bg-light open-sans-title text-muted border-bottom border-2 fs-4 pb-2 pt-4"
							id="posts-title"
						>
							My Posts
						</h2>

						<ul class="list-unstyled fw-normal pb-2 small mt-3">
							<% for (let i = 0; i < 10; i++) { %>
							<li>
								<a href="/feed/" class="d-block list-item rounded p-2 mb-2 fs-6">Echoes of Silence</a>
							</li>
							<li>
								<a href="/feed/" class="d-block list-item rounded p-2 mb-2 fs-6">Beyond the Horizon</a>
							</li>
							<% } %>
							<li>
								<a
									style="cursor: pointer"
									data-bs-toggle="modal"
									data-bs-target="#postModal"
									class="d-block list-add rounded p-2 mb-2 fs-6 fw-bold text-center text-primary"
								>
									+
								</a>
							</li>
						</ul>
					</div>
				</div>

				<!-- Main content -->
				<div class="col-8 col-xxl-6 bg-light mb-5">
					<% if (locals.posts) { %><%- include('partials/feed-posts.ejs') %><% } %>
				</div>

				<!-- Right sidebar -->
				<div
					class="col-2 col-xxl-3 bg-light ps-4 pt-3 border-start d-flex justify-content-start fixed-sidebar-right"
				>
					<div class="col-12 col-xxl-8">
						<h2
							class="sticky-top bg-light open-sans-title text-muted border-bottom border-2 fs-4 pb-2 pt-4"
							id="creators-title"
						>
							Following
						</h2>

						<ul class="list-unstyled fw-normal pb-2 small mt-3">
							<li>
								<a href="/signup/" class="d-block list-item rounded p-2 mb-2 fs-6">Juggerwicho</a>
							</li>
							<li>
								<a href="/login/" class="d-block list-item rounded p-2 mb-2 fs-6">MrBeast</a>
							</li>
							<li>
								<a href="/about/" class="d-block list-item rounded p-2 mb-2 fs-6">howtobasic</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>

		<!-- Create Post Modal -->
		<%- include('partials/create-post-modal.ejs') %>
		<!-- Main Settings Modal -->
		<%- include('partials/settings-modals/00-main-settings.ejs') %>
		<!-- Profile Picture Settings Modal -->
		<%- include('partials/settings-modals/01-picture-settings.ejs') %>
		<!-- Profile Background Settings Modal -->
		<%- include('partials/settings-modals/02-background-settings.ejs') %>
		<!-- Biography Settings Modal -->
		<%- include('partials/settings-modals/03-biography-settings.ejs') %>
		<!-- Password Settings Modal -->
		<%- include('partials/settings-modals/04-password-settings.ejs') %>
		<!-- Account Settings Modal -->
		<%- include('partials/settings-modals/05-account-settings.ejs') %>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
			crossorigin="anonymous"
		></script>
		<script src="/js/handlers/misc.js" charset="utf-8"></script>
		<script src="/js/handlers/trending.js" charset="utf-8"></script>
		<script src="/js/handlers/posts-new.js" charset="utf-8"></script>
		<script src="/js/handlers/sign-out.js" charset="utf-8"></script>
		<script src="/js/ui/date-format.js" charset="utf-8"></script>
		<script src="/js/ui/tooltips.js" charset="utf-8"></script>
		<script src="/js/ui/toggle-content.js" charset="utf-8"></script>
		<script src="/js/settings/01-picture-settings-handler.js" charset="utf-8"></script>
		<script src="/js/settings/02-background-settings-handler.js" charset="utf-8"></script>
		<script src="/js/settings/03-bio-settings-handler.js" charset="utf-8"></script>
		<script src="/js/settings/04-password-settings-handler.js" charset="utf-8"></script>
		<script src="/js/settings/05-account-settings-handler.js" charset="utf-8"></script>
	</body>
</html>
