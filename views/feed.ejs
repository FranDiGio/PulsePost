                            </li>
                            <li>
                                <a href="/feed/" class="d-block list-item rounded p-2 mb-2 fs-6">Beyond the Horizon</a>
                            </li>
                            <li>
                                <a
                                    style="cursor: pointer"
                                    data-bs-toggle="modal"
                                    data-bs-target="#postModal"
                                    class="d-block list-add rounded p-2 mb-2 fs-6 fw-bold text-center text-primary"
                                    >+</a
                                >
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Main content -->
                <div class="col-8 col-xxl-6">
                    <div class="d-flex flex-nowrap pt-3">
                        <%- include('partials/user-tag.ejs') %>
                        <div class="card col-8 border-secondary">
                            <div class="card-header">
                                <ul class="nav nav-tabs card-header-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#">Post</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Comments</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Likes</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title pb-1">Top 10 vacation sites</h5>
                                <p class="card-text">
