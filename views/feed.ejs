                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right sidebar -->
                <div class="col-2 col-xxl-3 bg-light ps-4 pt-3 d-flex justify-content-start fixed-sidebar-right">
                    <div class="col-12 col-xxl-8">
                        <h2
                            class="sticky-top bg-light open-sans-title text-muted border-bottom border-2 fs-4 pb-2 pt-4"
                            id="creators-title"
                        >
                            Following
                        </h2>

                        <ul class="list-unstyled fw-normal pb-2 small mt-3">
                            <li>
                                <a href="/signup/" class="d-block list-item rounded p-2 mb-2 fs-6">Juggerwicho</a>
                            </li>
                            <li>
                                <a href="/login/" class="d-block list-item rounded p-2 mb-2 fs-6">MrBeast</a>
                            </li>
                            <li>
                                <a href="/about/" class="d-block list-item rounded p-2 mb-2 fs-6">howtobasic</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Post Creation Modal -->
        <div class="modal" id="postModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5">New Post</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/submit/post" method="POST" id="postForm">
                            <div class="mb-3">
                                <label class="col-form-label">Title:</label>
                                <input type="text" class="form-control" id="postTitle" name="title" />
                            </div>
                            <div class="mb-3">
                                <label class="col-form-label">Content:</label>
                                <textarea
                                    class="form-control"
                                    id="postContent"
                                    rows="10"
                                    maxlength="1000"
                                    name="content"
                                ></textarea>
                                <div class="text-body-secondary fs-6">
                                    Characters remaining: <span id="charCount">1000</span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" form="postForm">Submit</button>
                    </div>
                </div>
            </div>
        </div>

        <script src="/js/create-post.js" charset="utf-8"></script>
        <script src="/js/animations.js" charset="utf-8"></script>
        <script src="/js/trending.js" charset="utf-8"></script>
        <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
