<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Sign Up</title>
		<link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
			crossorigin="anonymous"
		/>
		<link href="/styles/global.css" rel="stylesheet" />
		<link href="/styles/account-form.css" rel="stylesheet" />
		<link href="/styles/background.css" rel="stylesheet" />
	</head>

	<body class="vh-100">
		<div class="container-fluid h-100 d-flex align-items-center gradient-background-light">
			<div class="container w-50 d-flex justify-content-center">
				<div class="row custom-form-container">
					<% if (success === false) { %>

					<div class="d-lg-flex d-none col-5 p-0">
						<img class="img-fluid shadow" id="left-panel" src="/images/sign-up-art.png" alt="art" />
					</div>

					<div class="d-flex col-12 col-lg-7 bg-light p-5 shadow" id="right-panel">
						<form class="w-100" id="signupForm" action="/signup" method="POST">
							<a href="/">
								<img class="mb-4" src="/images/logo.png" alt="logo" style="max-height: 60px" />
							</a>
							<h3>Sign up and start posting!</h3>

							<div class="form-floating my-4 w-100">
								<input
									class="form-control w-100 <%= invalidUsername ? 'is-invalid' : '' %>"
									placeholder="Username"
									name="username"
									value="<%= locals.username ? username : '' %>"
									data-bs-toggle="tooltip"
									data-bs-placement="right"
									<%= locals.invalidUsernameMsg ? `data-bs-title="${escape(invalidUsernameMsg)}"` : '' %>
								/>
								<label for="floatingInput">Username</label>
							</div>
							<hr />

							<div class="form-floating mt-4 w-100">
								<input
									class="form-control w-100 <%= invalidEmail ? 'is-invalid' : '' %>"
									id="floatingEmail"
									type="email"
									placeholder="Email address"
									value="<%= locals.email ? email : '' %>"
									name="email"
									data-bs-toggle="tooltip"
									data-bs-placement="right"
									<%= locals.invalidEmailMsg ? `data-bs-title="${escape(invalidEmailMsg)}"` : '' %>
								/>
								<label for="floatingEmail">Email Address</label>
							</div>

							<div class="form-floating mb-4 w-100">
								<input
									class="form-control w-100 <%= invalidPassword ? 'is-invalid' : '' %>"
									id="floatingPassword"
									type="password"
									placeholder="Password"
									name="password"
									data-bs-toggle="tooltip"
									data-bs-placement="right"
									<%= locals.invalidPasswordMsg ? `data-bs-title="${escape(invalidPasswordMsg)}"` : '' %>
								/>
								<label for="floatingPassword">Password</label>
							</div>

							<button class="btn btn-primary" id="signupBtn" type="submit">Sign In</button>
						</form>
					</div>

					<% } else { %>

					<div
						class="d-flex col-12 p-5 h-50 shadow justify-content-center align-items-center background-green"
						id="top-panel"
					>
						<div class="d-flex justify-content-center">
							<img class="p-3" height="150px" alt="checkmark icon" src="/svg/checkmark.svg" />
						</div>
					</div>

					<div
						class="d-flex flex-column col-12 bg-light pt-4 px-5 h-50 text-center align-items-center shadow"
						id="bottom-panel"
					>
						<h4>Your account has been successfully created</h4>
						<a type="button" href="/feed/" class="btn btn-primary btn-lg mt-5 shadow">Continue</a>
					</div>

					<% } %>
				</div>
			</div>
		</div>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
			crossorigin="anonymous"
		></script>
		<script src="/js/ui/signup.js" charset="utf-8"></script>
		<script src="/js/ui/resize-form.js" charset="utf-8"></script>
		<script src="/js/ui/tooltips.js" charset="utf-8"></script>

	</body>
</html>
