<!-- Unfollow Confirmation Modal -->
<div id="unfollowModal" class="modal fade" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Unfollow?</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="d-flex align-items-center flex-column text-center my-2">
					<p>
						Are you sure you want to unfollow
						<strong><span id="modalUsernameBody"></span></strong>
						?
					</p>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-danger" id="confirmUnfollowBtn">Unfollow</button>
			</div>
		</div>
	</div>
</div>
