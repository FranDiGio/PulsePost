<!-- Update Biography Modal -->
<div class="modal" id="biographyModal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5">Update Biography</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body">
				<form action="/update/bio" method="POST" id="bioForm">
					<div class="mb-3">
						<label class="col-form-label">New bio:</label>
						<textarea class="form-control" id="bioContent" rows="10" maxlength="160" name="bioContent">
                            <%= bio %>
                        </textarea>
						<div class="text-body-secondary fs-6">
							Characters remaining:
							<span id="bioCharCount">160</span>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				<button type="submit" class="btn btn-primary" form="bioForm">Save</button>
			</div>
		</div>
	</div>
</div>
