<header class="container-fluid p-0 bg-light sticky-top shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container d-flex flex-nowrap">
            <!-- Home, Trending, and Search -->
            <div class="d-flex align-items-center">
                <a href="/feed/" class="col-2 me-1">
                    <div class="flex-shrink-0 overflow-hidden my-3" style="max-height: 60px">
                        <img class="header-icon" alt="home icon" src="/svg/house.svg" style="max-height: 60px" />
                    </div>
                </a>

                <a class="col-2 me-1 button-cursor" id="trending-btn">
                    <div class="flex-shrink-0 overflow-hidden my-3" style="max-height: 60px">
                        <img class="header-icon" alt="fire icon" src="/svg/fire.svg" style="max-height: 60px" />
                    </div>
                </a>

                <form class="col-10 col-lg-auto mb-0 me-lg-3" role="search">
                    <input type="search" class="form-control open-sans-title" placeholder="Search..." />
                </form>
            </div>

            <!-- Right side navlinks -->
            <div class="dropdown text-end mt-2 d-flex flex-nowrap">
                <p class="me-3 mt-2"><%= username %></p>
                <a
                    class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                    style="cursor: pointer"
                    data-bs-toggle="dropdown"
                >
                    <img src="<%= profilePictureUrl %>" width="40" height="40" class="rounded-circle" />
                </a>

                <ul class="dropdown-menu text-small">
                    <li>
                        <a
                            class="dropdown-item"
                            style="cursor: pointer"
                            data-bs-toggle="modal"
                            data-bs-target="#postModal"
                        >
                            New Post
                        </a>
                    </li>
                    <li>
                        <a
                            class="dropdown-item"
                            style="cursor: pointer"
                            data-bs-toggle="modal"
                            data-bs-target="#settingsModal"
                        >
                            Settings
                        </a>
                    </li>
                    <li><a class="dropdown-item" href="/profile/<%= encodeURIComponent(username) %>">Profile</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#" onclick="signOut()">Sign out</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<script src="/js/auth.js" charset="utf-8"></script>
