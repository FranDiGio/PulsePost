<% Object.keys(posts).forEach(function(key) { %>
<div class="d-flex flex-nowrap pt-4 m-2">
	<!-- Post Details -->
	<div class="col-12">
		<div class="card border-secondary">
			<div class="card-header">
				<ul class="nav nav-tabs card-header-tabs">
					<li class="nav-item">
						<a class="nav-link post-tab active">Post</a>
					</li>
					<li class="nav-item">
						<a class="nav-link comments-tab">
							Comments
							<span>(<%= posts[key].commentCount || 0 %>)</span>
						</a>
					</li>
					<% if (isSelf) { %>
					<li class="nav-item ms-auto">
						<a
							class="flex-shrink-0 overflow-hidden pe-1 pt-0 pb-2"
							style="max-height: 40px; cursor: pointer"
							data-bs-toggle="dropdown"
						>
							<img alt="options icon" src="/svg/three-dots-vertical.svg" />
						</a>

						<ul class="dropdown-menu text-small rounded">
							<li>
								<a
									class="dropdown-item delete-post-link"
									data-key="<%= key %>"
									data-bs-toggle="modal"
									data-bs-target="#confirmDeletePostModal"
								>
									Delete post
								</a>
							</li>
						</ul>
					</li>
					<% } %>
				</ul>
			</div>

			<div class="card-body">
				<!-- Post Section -->
				<div class="m-0 p-0 post-section">
					<h5 class="card-title pb-1"><%= posts[key].title %></h5>
					<p class="card-text post-content mb-1 overflow-hidden"><%= posts[key].content %></p>

					<button type="button" class="btn text-muted p-0 read-more-btn" style="font-size: 0.8rem">
						Show more
					</button>
				</div>

				<!-- Comments Section -->
				<div class="m-0 p-0 comments-section d-none">
					<div class="container-fluid px-0">
						<div
							class="d-flex fake-input-bar align-items-center border rounded-5 bg-light ps-2 pe-4 py-2 gap-2"
							data-bs-toggle="modal"
							data-bs-target="#commentModal"
							data-post-id="<%= key %>"
							role="button"
						>
							<a class="d-flex">
								<img
									src="<%= userPictureUrl %>"
									width="40"
									height="40"
									alt="profile-picture"
									class="rounded-circle"
								/>
							</a>

							<div class="flex-grow-1 bg-light px-2 py-2">
								<span class="text-muted">Add a comment</span>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="card-footer d-flex justify-content-between">
				<div class="d-flex">
					<button class="like-button p-0" data-post-id="<%= key %>">
						<% if (posts[key].isLikedByCurrentUser) { %>
						<i class="heart-icon filled"></i>
						<% } else { %>
						<i class="heart-icon"></i>
						<% } %>
					</button>
					<p class="like-count text-muted my-0 ms-2 py-0" style="font-size: 0.8rem">
						<%= posts[key].likeCount %>
					</p>
				</div>
				<p class="timestamp text-muted my-0 py-0" style="font-size: 0.8rem"><%= posts[key].createdAtMs %></p>
			</div>
		</div>
	</div>
</div>
<% }); %>