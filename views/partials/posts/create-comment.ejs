<!-- Comment Creation Modal -->
<div class="modal" id="commentModal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5">New Comment</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body">
				<form action="/comment" method="POST" id="commentForm">
					<div class="mb-3">
						<textarea
							class="form-control"
							id="commentContent"
							rows="6"
							maxlength="300"
							name="content"
							data-bs-toggle="tooltip"
							data-bs-placement="right"
							placeholder="Add a comment"
						></textarea>
						<div class="text-body-secondary char-counter mt-1 ms-1">
							Characters remaining:
							<span id="commentCharCount">300</span>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				<button type="submit" id="submitBtn" class="btn btn-primary" form="commentForm">Submit</button>
			</div>
		</div>
	</div>
</div>
