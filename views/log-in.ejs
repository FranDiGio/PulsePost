<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Log In</title>
		<link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
			crossorigin="anonymous"
		/>
		<link href="/styles/global.css" rel="stylesheet" />
		<link href="/styles/account-form.css" rel="stylesheet" />
		<link href="/styles/background.css" rel="stylesheet" />
	</head>

	<body class="vh-100">
		<div class="container-fluid h-100 d-flex align-items-center gradient-background-dark">
			<div class="container w-50 custom-form-container">
				<div class="row">
					<div class="d-lg-flex d-none col-5 p-0">
						<img class="img-fluid shadow" id="left-panel" src="/images/login-art.png" alt="art" />
					</div>

					<div class="d-flex col-12 col-lg-7 bg-light p-5 shadow" id="right-panel">
						<form class="w-100" id="loginForm" action="/sessions" method="POST">
							<a href="/">
								<img class="mb-4" src="/images/logo.png" alt="logo" style="max-height: 60px" />
							</a>
							<h2>Log In</h2>

							<div class="form-floating mt-4 w-100">
								<input
									class="form-control w-100 <%= invalidCredentials ? 'is-invalid' : '' %>"
									id="floatingEmail"
									value="<%= locals.email ? email : '' %>"
									type="email"
									placeholder="Email address"
									name="email"
								/>
								<label for="floatingEmail">Email Address</label>
							</div>

							<div class="form-floating mb-1 w-100">
								<input
									class="form-control w-100 <%= invalidCredentials ? 'is-invalid' : '' %>"
									id="floatingPassword"
									type="password"
									placeholder="Password"
									name="password"
								/>
								<label for="floatingPassword">Password</label>
							</div>

							<% if (locals.message) { %>
							<p class="text-danger"><%= message %></p>
							<% } %>

							<button class="btn btn-primary" id="loginBtn" type="submit">Log In</button>
						</form>
					</div>
				</div>
			</div>
		</div>

		<script src="/js/ui/login.js" charset="utf-8"></script>
		<script src="/js/ui/resize-form.js" charset="utf-8"></script>
	</body>
</html>
